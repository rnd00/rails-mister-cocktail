<div class="container">
  <h1 class="text-center">Cocktail details</h1>
  <h2 class="text-center"><%= @cocktail.name %></h2>
  <%# list all of the doses  %>
  <ul>
    <% @doses.each do |dose| %>
      <li>
        <%= "#{dose.description} of #{dose.ingredient.name}" %>
        <%= link_to dose_path(dose), method: :delete, class: 'text-small text-danger' do %>
          <i class="fas fa-minus-circle"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%# buttons and whatnots %>
  <%= link_to new_cocktail_dose_path(@cocktail), class: "btn btn-info text-white" do %>
    <i class="fas fa-glass-whiskey"></i>
    Add a dose
  <% end %>
  <%= link_to cocktails_path, class: "btn btn-secondary text-white" do %>
    <i class="fa fa-backward" aria-hidden="true"></i>
    Back
  <% end %>
</div>
