<div class="container">
  <h1 class="text-center">Cocktail library</h1>
  <div class="d-flex justify-content-center">
    <%= link_to new_cocktail_path, class: "btn btn-primary text-white" do %>
      <i class="fa fa-plus" aria-hidden="true"></i>
      Add a new Cocktail
    <% end %>
  </div>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-product my-3">
        <%= image_tag "https://picsum.photos/seed/#{rand(0..100)}/120", alt: cocktail.name %>
        <div class="card-product-infos">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
